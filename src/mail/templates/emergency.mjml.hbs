    <mj-include path="head.mjml" />
    <mj-class name="user" font-weight="bold" />
  </mj-head>
  <mj-body>
    <mj-section>
      <mj-column>
        <mj-text mj-class="primary-heading">EMERGENCY</mj-text>

        <mj-text>
          An emergency warning for
